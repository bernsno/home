<% form_for @user_session, :url => user_session_path do |f| %>
	<%= f.error_messages %>
	<fieldset>
		<legend>Login</legend>
		<ol>
			<li id="email" <% unless @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
				<%= f.label :email %>
				<%= f.text_field :email %>
				<small>(or <%= link_to_function "use OpenID", "$('#email, #password').toggle(); $('#openid_identifier').toggle();" %>)</small>
			</li>
			<li id="password" <% unless @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
				<%= f.label :password %>
				<%= f.password_field :password %>
			</li>
			<li id="openid_identifier" <% if @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
				<%= f.label :openid_identifier, "OpenID" %>
				<%= f.text_field :openid_identifier %>
				<small>(or <%= link_to_function "use email/password", "$('#email, #password').toggle(); $('#openid_identifier').toggle();" %>)</small>
			</li>
			<li id="remember_me">
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me, "Remember me", :class => "checkbox" %>
			</li>
			<li class="submit">
				<%= f.submit "Login &raquo;", :class => "submit" %>
			</li>
		</ol>
	</fieldset>
	<%=link_to "Forgot your password?", new_password_reset_path %>
<% end %>